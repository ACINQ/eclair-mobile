<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:textColor">@color/grey_4</item>
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary</item>
    <item name="colorAccent">@color/primary</item>
    <item name="android:textColorSecondary">@color/white</item>
    <item name="android:letterSpacing">0.01</item>

    <!-- forced white bg for consistency with older android versions -->
    <item name="android:windowBackground">@color/almost_white</item>
    <item name="android:colorBackground">@color/white</item>

    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="actionBarTheme">@null</item>
  </style>

  <!-- theme for activity with primary color background and white text -->
  <style name="PrimaryBgTheme" parent="AppTheme">
    <item name="android:textColor">@color/white</item>
    <item name="colorAccent">@color/primary_light_x3</item>
    <item name="android:windowBackground">@drawable/bg_primary_gradient</item>
    <item name="android:colorBackground">@color/white</item>
    <item name="android:lineSpacingMultiplier">1.15</item>
  </style>

  <style name="HomeTheme" parent="PrimaryBgTheme">
    <item name="android:textColor">@color/grey_4</item>
  </style>

  <style name="PreferenceStyle" parent="Preference">
    <item name="android:actionBarStyle">@style/PreferenceStyle.ActionBar</item>
    <item name="android:colorAccent">@color/primary</item>
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary</item>
    <item name="android:statusBarColor">@color/primary</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="android:textColor">@color/grey_4</item>
    <item name="android:textColorSecondary">@color/grey_2</item>
  </style>

  <style name="ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:windowBackground">@color/primary</item>
    <item name="android:background">@color/primary</item>
    <item name="android:displayOptions">showTitle</item>
    <item name="android:height">@dimen/action_bar_height</item>
  </style>

  <style name="PreferenceStyle.ActionBar" parent="@style/ActionBar">
    <item name="android:displayOptions">homeAsUp|showTitle</item>
    <item name="android:textColorPrimary">@color/white</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="CustomDialogTitle">
    <item name="android:textColor">@color/grey_4</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
  </style>

  <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorAccent">@color/primary</item>
    <item name="android:textColor">@color/grey_4</item>
    <item name="android:textColorPrimary">@color/grey_4</item>
    <item name="android:windowTitleStyle">@style/CustomDialogTitle</item>
    <item name="android:windowMinWidthMajor">85%</item>
    <item name="android:windowMinWidthMinor">85%</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="actionBarTheme">@null</item>
    <item name="android:windowSoftInputMode">adjustResize</item>
  </style>

  <style name="FullScreenDialog" parent="@style/CustomDialog">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:windowBackground">@color/primary</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:statusBarColor">@color/primary</item>
  </style>

  <style name="CustomAlertDialog" parent="CustomDialog">
    <item name="android:windowMinWidthMajor">70%</item>
    <item name="android:windowMinWidthMinor">70%</item>
  </style>

  <style name="SplashTheme" parent="PrimaryBgTheme">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:background">@android:color/transparent</item>
  </style>

  <style name="scanTheme" parent="zxing_CaptureTheme">
    <item name="android:textColor">@color/grey_4</item>
  </style>

  <style name="CustomTabStyle" parent="Widget.Design.TabLayout">
    <item name="tabPaddingStart">@dimen/space_xs</item>
    <item name="tabPaddingEnd">@dimen/space_xs</item>
    <item name="tabBackground">@android:color/transparent</item>
    <item name="tabTextAppearance">@style/CustomTabText</item>
    <item name="tabIndicatorHeight">0dp</item>
    <item name="tabIndicatorColor">@android:color/transparent</item>
    <item name="tabSelectedTextColor">@color/white</item>
  </style>

  <style name="CustomTabText" parent="TextAppearance.AppCompat.Button">
    <item name="android:textSize">10sp</item>
    <item name="android:textColor">@color/primary_light_x2</item>
    <item name="textAllCaps">false</item>
  </style>

  <style name="PinButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:layout_width">@dimen/pin_button_size</item>
    <item name="android:layout_height">@dimen/pin_button_size</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_margin">8dp</item>
    <item name="android:hapticFeedbackEnabled">true</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="PinButtonCircleStyle" parent="@style/PinButtonStyle">
    <item name="android:background">@drawable/btn_circle_pin</item>
  </style>

  <style name="VirtualKey" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:fontFamily">sans-serif-condensed-light</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">12dp</item>
    <item name="android:textColor">@drawable/text_virtual_key</item>
    <item name="android:hapticFeedbackEnabled">true</item>
    <item name="android:textSize">20sp</item>
    <item name="android:background">@drawable/bg_virtual_key</item>
  </style>

  <style name="ClickableLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">@dimen/space_md</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:foreground">?android:attr/selectableItemBackground</item>
  </style>

  <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:paddingStart">@dimen/space_md</item>
    <item name="android:paddingEnd">@dimen/space_md</item>
    <item name="android:paddingTop">@dimen/space_md</item>
    <item name="android:paddingBottom">@dimen/space_md</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:foreground">?android:attr/selectableItemBackground</item>
    <item name="android:drawablePadding">@dimen/space_xs</item>
  </style>

  <style name="InlineButtonStyle" parent="ButtonStyle">
    <item name="android:textAllCaps">false</item>
    <item name="android:paddingStart">0dp</item>
    <item name="android:paddingEnd">0dp</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="android:background">@null</item>
    <item name="android:foreground">@null</item>
  </style>

  <style name="WhiteBgButtonStyle" parent="ButtonStyle">
    <item name="android:paddingTop">@dimen/space_xs</item>
    <item name="android:paddingBottom">@dimen/space_xs</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:background">@drawable/btn_white_bg</item>
    <item name="android:foreground">@null</item>
  </style>

  <style name="EndButtonStyle" parent="ButtonStyle">
    <item name="android:layout_gravity">end</item>
  </style>

  <style name="TitleCapsIcon" parent="Base.TextAppearance.AppCompat">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:drawablePadding">@dimen/space_sm</item>
    <item name="android:gravity">start|center</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="RoundedWhitePanel">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:padding">@dimen/space_lg</item>
    <item name="android:background">@drawable/rounded_corner_white</item>
    <item name="android:textColor">@color/grey_4</item>
  </style>

  <style name="WarningMessage">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:drawableStart">@drawable/ic_alert_circle_orange_bg_18dp</item>
    <item name="android:drawablePadding">@dimen/space_xs</item>
  </style>

  <style name="ErrorMessage" parent="WarningMessage">
    <item name="android:drawableStart">@drawable/ic_x_circle_red_bg_18dp</item>
  </style>

  <style name="ProgressIndicator" parent="Base.TextAppearance.AppCompat">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">@dimen/space_xxs</item>
    <item name="android:text">@string/commons_progress_indicator</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="HLineSeparator">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">@color/grey_0_light_x1</item>
  </style>

  <style name="HSeparator" parent="HLineSeparator">
    <item name="android:layout_width">50dp</item>
    <item name="android:background">@color/grey_0</item>
  </style>

  <style name="TitleBar" parent="TextAppearance.AppCompat">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/text_sm</item>
    <item name="android:textColor">@color/grey_2</item>
    <item name="android:background">@color/grey_0_light_x1</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:paddingEnd">@dimen/space_md</item>
    <item name="android:paddingStart">@dimen/space_md</item>
    <item name="android:paddingTop">@dimen/space_sm</item>
    <item name="android:gravity">start|center</item>
    <item name="android:drawablePadding">6dp</item>
  </style>

  <style name="DataRowContainer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    <!--<item name="android:paddingEnd">@dimen/space_xxs</item>-->
    <!--<item name="android:paddingStart">@dimen/space_xxs</item>-->
  </style>

  <style name="CapsGrey">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/grey_1</item>
    <item name="android:textSize">@dimen/text_xs</item>
  </style>

  <style name="TitleCapsGrey" parent="CapsGrey">
    <item name="android:textSize">@dimen/text_xs</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_marginBottom">@dimen/space_xxs</item>
  </style>

  <style name="DataRowText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:letterSpacing">0.01</item>
    <item name="android:lineSpacingMultiplier">1.1</item>
    <item name="android:textIsSelectable">true</item>
    <item name="android:textSize">@dimen/text_sm</item>
  </style>

</resources>
