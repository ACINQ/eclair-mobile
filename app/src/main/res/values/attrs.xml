<resources>
  <attr name="label" format="string" />
  <declare-styleable name="CoinAmountView">
    <attr name="force_btc" format="boolean" />
    <attr name="amount_size" format="dimension" />
    <attr name="amount_color" format="color" />
    <attr name="bold" format="boolean" />
    <attr name="unit" format="string" />
    <attr name="unit_size" format="dimension" />
    <attr name="unit_color" format="color" />
  </declare-styleable>
  <declare-styleable name="VirtualKeyboard">
    <attr name="label" />
  </declare-styleable>
  <declare-styleable name="DataRow">
    <attr name="label" />
    <attr name="value" format="string" />
    <attr name="is_bottom_rounded" format="boolean" />
    <attr name="has_border" format="boolean" />
    <attr name="has_action" format="boolean" />
    <attr name="action_label" format="string" />
    <attr name="action_text_color" format="color" />
  </declare-styleable>
  <declare-styleable name="CustomButton">
    <attr name="text" format="string" />
    <attr name="text_color" format="color" />
    <attr name="sub_text" format="string" />
    <attr name="sub_text_color" format="color" />
    <attr name="image" format="reference" />
    <attr name="image_tint" format="color" />
    <attr name="background" format="reference" />
    <attr name="is_pending" format="boolean" />
  </declare-styleable>
  <declare-styleable name="FabText">
    <attr name="label" />
    <attr name="icon" format="reference" />
    <attr name="bgcolor" format="color" />
    <attr name="bg" format="reference" />
  </declare-styleable>

</resources>
