<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".activities.HomeActivity">

  <ViewStub
    android:id="@+id/home_stub_breaking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout="@layout/include_home_breaking" />

  <ViewStub
    android:id="@+id/home_stub_disclaimer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout="@layout/include_home_disclaimer" />

  <ViewStub
    android:id="@+id/home_stub_backup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout="@layout/include_home_backup" />

  <ViewStub
    android:id="@+id/home_stub_intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout="@layout/include_home_intro" />

  <android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
      android:id="@+id/home_appbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorPrimary">

      <LinearLayout
        android:id="@+id/home_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <LinearLayout
          android:id="@+id/home_topbar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          app:layout_collapseMode="pin">

          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center"
            android:orientation="horizontal">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginStart="16dp"
              android:background="@drawable/rounded_corner_green"
              android:elevation="2dp"
              android:paddingBottom="3dp"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:paddingTop="3dp"
              android:text="@string/chain_test"
              android:textColor="@color/white"
              android:textSize="10sp"
              android:textStyle="bold" />

            <TextView
              android:id="@+id/home_connection_status"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="4dp"
              android:visibility="gone"
              android:alpha="0.7"
              android:textColor="@color/white"
              android:drawableEnd="@drawable/circle_red"
              android:drawablePadding="4dp"
              android:textAllCaps="true"
              android:textSize="8sp" />

          </LinearLayout>

          <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:paddingLeft="16dp">

              <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent" />

            </LinearLayout>
          </RelativeLayout>

        </LinearLayout>

        <RelativeLayout

          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:paddingBottom="16dp"
          android:paddingLeft="24dp"
          android:paddingRight="24dp"
          android:paddingTop="8dp">

          <fr.acinq.eclair.wallet.customviews.CoinAmountView
            android:id="@+id/home_balance_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:alignment="center"
            app:amount_color="@color/white"
            app:amount_size="42sp"
            app:unit="mBTC"
            app:unit_color="@color/white"
            app:unit_size="12sp" />

          <fr.acinq.eclair.wallet.customviews.CoinAmountView
            android:id="@+id/home_balance_onchain_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_balance_total"
            android:layout_marginTop="4dp"
            android:alpha="0.8"
            app:alignment="center"
            app:amount_bold="true"
            app:amount_color="@color/white"
            app:amount_size="11sp"
            app:image_size="12dp"
            app:image_src="@drawable/icon_btc_shape_white"
            app:unit="mBTC"
            app:unit_color="@color/white"
            app:unit_size="10sp" />

          <fr.acinq.eclair.wallet.customviews.CoinAmountView
            android:id="@+id/home_balance_ln_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_balance_onchain_value"
            android:alpha="0.8"
            app:alignment="center"
            app:amount_bold="true"
            app:amount_color="@color/white"
            app:amount_size="11sp"
            app:image_size="12dp"
            app:image_src="@drawable/icon_bolt_shape_white"
            app:unit="mBTC"
            app:unit_color="@color/white"
            app:unit_size="10sp" />

        </RelativeLayout>

      </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
      android:id="@+id/home_viewpager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_behavior="@string/appbar_scrolling_view_behavior" />

  </android.support.design.widget.CoordinatorLayout>

  <RelativeLayout
    android:id="@+id/home_send_buttons"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true">

    <LinearLayout
      android:id="@+id/home_send_buttons_enabled"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:gravity="end"
      android:orientation="vertical">

      <LinearLayout
        android:id="@+id/home_send_buttons_toggle"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <fr.acinq.eclair.wallet.customviews.FabText
          android:id="@+id/home_send_paste"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:onClick="home_sendPaste"
          app:icon="@mipmap/ic_paste"
          app:label="Paste a payment request" />

        <fr.acinq.eclair.wallet.customviews.FabText
          android:id="@+id/home_send_scan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:onClick="home_sendScan"
          app:icon="@mipmap/ic_scan"
          app:label="Scan a payment request" />

      </LinearLayout>

      <android.support.design.widget.FloatingActionButton
        android:id="@+id/home_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="8dp"
        android:onClick="home_toggleSendButtons"
        android:src="@mipmap/ic_send"
        android:visibility="gone"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
      android:id="@+id/home_send_button_disabled"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_marginBottom="@dimen/fab_margin"
      android:layout_marginEnd="@dimen/fab_margin"
      android:layout_marginStart="@dimen/fab_margin"
      android:layout_marginTop="8dp"
      android:clickable="true"
      android:src="@mipmap/ic_send_disabled"
      app:backgroundTint="@color/colorGrey_0"
      app:fabSize="normal" />

  </RelativeLayout>

  <LinearLayout
    android:id="@+id/home_openchannel_buttons"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:gravity="end"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
      android:id="@+id/home_openchannel_buttons_toggle"
      android:layout_width="190dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="gone">

      <fr.acinq.eclair.wallet.customviews.FabText
        android:id="@+id/home_openchannel_paste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="home_doPasteURI"
        app:bgcolor="@color/green"
        app:icon="@mipmap/ic_paste"
        app:label="Paste a Node URI" />

      <fr.acinq.eclair.wallet.customviews.FabText
        android:id="@+id/home_openchannel_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="home_doScanURI"
        app:bgcolor="@color/green"
        app:icon="@mipmap/ic_scan"
        app:label="Scan a Node URI" />

      <fr.acinq.eclair.wallet.customviews.FabText
        android:id="@+id/home_openchannel_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="home_doRandomChannel"
        app:bgcolor="@color/green"
        app:icon="@drawable/icon_random_white"
        app:label="Autoconnect" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
      android:id="@+id/home_openchannel_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/fab_margin"
      android:layout_marginEnd="@dimen/fab_margin"
      android:layout_marginStart="@dimen/fab_margin"
      android:layout_marginTop="8dp"
      android:onClick="home_toggleOpenChannelButtons"
      android:src="@mipmap/ic_plus"
      app:backgroundTint="@color/green"
      app:fabSize="normal" />
  </LinearLayout>

</RelativeLayout>
