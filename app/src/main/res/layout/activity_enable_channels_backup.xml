<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <import type="android.view.View" />

    <variable
      name="googleDriveAvailable"
      type="boolean" />

    <variable
      name="accessDenied"
      type="boolean" />

    <variable
      name="showDetails"
      type="boolean" />

  </data>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_margin="@dimen/space_lg"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_white"
        android:orientation="horizontal"
        android:padding="@dimen/space_lg"
        android:gravity="center"
        android:visibility="@{!googleDriveAvailable ? View.VISIBLE : View.GONE}">

        <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/ic_warning_tri" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/space_xs"
          android:text="@string/backup_drive_unavailable" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_green_top"
        android:orientation="vertical"
        android:padding="@dimen/space_lg">

        <TextView
          android:id="@+id/backup_type_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/space_md"
          android:text="@string/backup_drive_title"
          android:textColor="@color/white" />

        <Button
          android:layout_width="wrap_content"
          android:layout_height="24dp"
          android:background="@android:color/transparent"
          android:drawablePadding="@dimen/space_xs"
          android:drawableStart="@drawable/ic_info_outline_white_24dp"
          android:onClick="showDetails"
          android:padding="0dp"
          android:text="@string/backup_drive_details_more_button"
          android:textColor="@color/white"
          android:textSize="10sp"
          android:visibility="@{showDetails ? View.GONE : View.VISIBLE}" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/backup_drive_details"
          android:textColor="@color/white"
          android:textSize="12sp"
          android:visibility="@{showDetails ? View.VISIBLE : View.GONE}" />

      </LinearLayout>

      <LinearLayout
        style="@style/ClickableLayout"
        android:background="@drawable/rounded_corner_white_bottom"
        android:onClick="grantAccess"
        android:padding="@dimen/space_lg"
        android:visibility="@{googleDriveAvailable &amp;&amp; accessDenied ? View.VISIBLE : View.GONE}">

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginEnd="@dimen/space_xs"
          android:src="@drawable/ic_cloud_queue_black_24dp" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/backup_drive_grant_access"
          android:textAllCaps="true" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_white_bottom"
        android:orientation="vertical"
        android:visibility="@{googleDriveAvailable &amp;&amp; accessDenied ? View.GONE : View.VISIBLE}">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingEnd="@dimen/space_lg"
          android:paddingStart="@dimen/space_lg"
          android:paddingTop="@dimen/space_lg"
          android:text="@string/backup_drive_access_granted" />

        <TextView
          android:id="@+id/access_account"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="middle"
          android:paddingEnd="@dimen/space_lg"
          android:paddingStart="@dimen/space_lg"
          android:paddingTop="@dimen/space_xxs"
          android:singleLine="true"
          android:text="@string/backup_drive_access_account"
          android:textStyle="bold" />

        <View
          android:layout_width="50dp"
          android:layout_height="1dp"
          android:layout_marginBottom="@dimen/space_sm"
          android:layout_marginStart="@dimen/space_lg"
          android:layout_marginTop="@dimen/space_md"
          android:background="@color/grey_0_light_x1" />

        <TextView
          android:id="@+id/existing_backup_state"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingEnd="@dimen/space_lg"
          android:paddingStart="@dimen/space_lg"
          android:text="@string/backup_drive_retrieving_meta"
          android:textColor="@color/grey_2"
          android:textSize="12sp" />

        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="@dimen/space_lg"
          android:background="@color/grey_0_light_x1" />

        <LinearLayout
          style="@style/ClickableLayout"
          android:onClick="revokeAccess">

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/space_xs"
            android:src="@drawable/ic_block_red_24dp" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backup_drive_revoke_access"
            android:textAllCaps="true"
            android:textColor="@color/red_faded" />
        </LinearLayout>
      </LinearLayout>

      <Button
        android:id="@+id/close_button"
        style="@style/EndButtonStyle"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_md"
        android:text="@string/btn_close"
        android:textColor="@color/white" />
    </LinearLayout>
  </ScrollView>
</layout>
