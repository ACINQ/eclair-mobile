<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/red_faded_dark_x2"
  android:columnCount="2"
  android:paddingBottom="4dp"
  android:paddingEnd="10dp"
  android:paddingStart="10dp"
  android:paddingTop="16dp">

  <TextView
    android:id="@+id/lightning_error_counter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:layout_marginEnd="6dp"
    android:gravity="end"
    android:maxWidth="116dp"
    android:minWidth="84dp"
    android:text="@string/paymentfailure_error_counter"
    android:textColor="@color/red_faded_light_x1"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/lightning_error_cause"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:text="@string/unknown"
    android:textColor="@color/almost_white"
    android:textIsSelectable="true"
    android:textStyle="bold" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:layout_marginEnd="6dp"
    android:gravity="end"
    android:text="@string/paymentfailure_error_type_label"
    android:textColor="@color/red_faded_light_x1"
    android:textSize="12sp" />

  <TextView
    android:id="@+id/lightning_error_type"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:text="@string/paymentfailure_error_cause"
    android:textColor="@color/red_faded_light_x2"
    android:textIsSelectable="true"
    android:textSize="12sp" />

  <TextView
    android:id="@+id/lightning_error_origin_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:layout_marginEnd="6dp"
    android:gravity="end"
    android:text="@string/paymentfailure_error_origin_label"
    android:textAlignment="viewEnd"
    android:textColor="@color/red_faded_light_x1"
    android:textSize="12sp"
    android:visibility="gone" />

  <TextView
    android:id="@+id/lightning_error_origin"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:textColor="@color/red_faded_light_x2"
    android:textIsSelectable="true"
    android:textSize="12sp"
    android:visibility="gone" />

  <TextView
    android:id="@+id/lightning_error_origin_channel_id_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:layout_marginEnd="6dp"
    android:gravity="end"
    android:text="@string/paymentfailure_error_origin_channel_label"
    android:textAlignment="viewEnd"
    android:textColor="@color/red_faded_light_x1"
    android:textSize="12sp"
    android:visibility="gone" />

  <TextView
    android:id="@+id/lightning_error_origin_channel_id"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:textColor="@color/red_faded_light_x2"
    android:textIsSelectable="true"
    android:textSize="12sp"
    android:visibility="gone" />

  <TextView
    android:id="@+id/lightning_error_hops"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_column="1"
    android:layout_gravity="fill_horizontal"
    android:alpha="0.8"
    android:textColor="@color/red_faded_light_x2"
    android:textIsSelectable="true"
    android:textSize="12sp"
    android:visibility="gone" />

</GridLayout>
