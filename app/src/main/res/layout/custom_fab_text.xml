<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <android.support.design.widget.FloatingActionButton
    android:id="@+id/fabtext_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="@dimen/space_md"
    android:layout_marginBottom="8dp"
    app:backgroundTint="@color/primary"
    app:fabSize="mini" />

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/fabtext_button"
    android:layout_alignBottom="@+id/fabtext_button"
    android:layout_marginEnd="-8dp"
    android:layout_toStartOf="@+id/fabtext_button"
    android:clipToPadding="false"
    android:gravity="center">

    <TextView
      android:id="@+id/fabtext_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="3dp"
      android:background="@drawable/rounded_left_primary_dark"
      android:elevation="3.5dp"
      android:ellipsize="end"
      android:maxLines="1"
      android:paddingStart="6dp"
      android:paddingTop="3dp"
      android:paddingEnd="8dp"
      android:paddingBottom="3dp"
      android:text="@string/unknown"
      android:textAllCaps="true"
      android:textColor="@color/white"
      android:textSize="12sp" />
  </LinearLayout>


</RelativeLayout>
