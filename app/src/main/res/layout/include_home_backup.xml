<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/home_backup"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorPrimary"
  android:clickable="true"
  android:elevation="10dp">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:padding="32dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        android:id="@+id/home_backup_failed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_corner_white"
        android:padding="8dp"
        android:text="@string/home_backup_failed"
        android:textColor="@color/redFaded"
        android:visibility="gone" />

      <LinearLayout
        android:id="@+id/home_backup_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
          android:id="@+id/home_backup_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="32dp"
          android:text="@string/home_backup_text"
          android:textColor="@color/white" />

        <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:backgroundTint="@color/white"
          android:onClick="home_initCheckRecoveryPhrase"
          android:paddingBottom="8dp"
          android:paddingLeft="16dp"
          android:paddingRight="16dp"
          android:paddingTop="8dp"
          android:text="@string/home_backup_button"
          android:textColor="@color/colorPrimaryDark" />

      </LinearLayout>

      <LinearLayout
        android:id="@+id/home_backup_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
          android:id="@+id/home_backup_check"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:text="@string/home_backup_check"
          android:textColor="@color/white" />

        <EditText
          android:id="@+id/home_backup_input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:backgroundTint="@color/white"
          android:digits="abcdefghijklmnopqrstuvwxyz "
          android:hint="@string/home_backup_check_hint"
          android:inputType="text"
          android:maxLines="2"
          android:textColor="@color/white"
          android:textColorHint="@color/primary_light_1"
          android:textCursorDrawable="@null" />

        <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:backgroundTint="@color/white"
          android:onClick="home_doCheckRecoveryPhrase"
          android:paddingBottom="8dp"
          android:paddingLeft="16dp"
          android:paddingRight="16dp"
          android:paddingTop="8dp"
          android:text="@string/home_backup_do_check_button"
          android:textColor="@color/colorPrimaryDark" />

      </LinearLayout>

      <LinearLayout
        android:id="@+id/home_backup_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <Button
          android:id="@+id/home_backup_finish_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:backgroundTint="@color/white"
          android:paddingBottom="8dp"
          android:paddingLeft="16dp"
          android:paddingRight="16dp"
          android:paddingTop="8dp"
          android:text="@string/home_backup_finish_button"
          android:textColor="@color/colorPrimaryDark" />

      </LinearLayout>
    </LinearLayout>
  </ScrollView>

  <Button
    android:id="@+id/home_backup_skip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="center"
    android:background="@color/colorPrimaryFaded"
    android:elevation="4dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:text="@string/home_backup_button_skip"
    android:textColor="@color/white"
    android:visibility="visible" />

</RelativeLayout>
