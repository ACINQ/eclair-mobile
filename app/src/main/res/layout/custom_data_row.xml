<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="@dimen/space_sm"
  android:paddingEnd="@dimen/space_md"
  android:paddingStart="@dimen/space_md"
  android:paddingTop="@dimen/space_sm">

  <android.support.constraint.Guideline
    android:id="@+id/guideline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/space_md"
    android:layout_marginStart="@dimen/space_md"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.5" />

  <TextView
    android:id="@+id/data_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxLines="1"
    android:textStyle="bold"
    app:layout_constrainedWidth="true"
    app:layout_constraintEnd_toStartOf="@id/guideline"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/data_desc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/grey_1"
    android:textSize="12sp"
    app:layout_constrainedWidth="true"
    app:layout_constraintEnd_toStartOf="@id/guideline"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/data_label" />

  <TextView
    android:id="@+id/data_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="start|center_vertical"
    android:textIsSelectable="true"
    android:textSize="12sp"
    app:layout_constrainedWidth="true"
    app:layout_constraintBaseline_toBaselineOf="@id/data_label"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="@id/guideline" />

  <Button
    android:id="@+id/data_action"
    style="@style/ButtonStyle"
    android:layout_below="@id/data_value"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/space_md"
    android:background="@color/grey_0_light_x1"
    android:padding="@dimen/space_xs"
    android:textSize="10sp"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="@id/guideline"
    app:layout_constraintTop_toBottomOf="@id/data_value" />

</android.support.constraint.ConstraintLayout>
