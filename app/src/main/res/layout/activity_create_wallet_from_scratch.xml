<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <import type="android.view.View" />

    <import type="fr.acinq.eclair.wallet.BuildConfig" />

    <import type="fr.acinq.eclair.wallet.utils.Constants" />

    <variable
      name="creationStep"
      type="int" />
  </data>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:fillViewport="true"
    android:theme="@style/PrimaryBgTheme"
    tools:context=".activities.CreateWalletFromScratchActivity">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/space_lg">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="@{creationStep == Constants.CREATE_WALLET_STEP_INIT ? View.VISIBLE : View.GONE}">

        <TextView
          android:id="@+id/instructions"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/space_lg"
          android:text="@string/createwallet_instructions" />

        <TableLayout
          android:id="@+id/words_table"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/space_lg" />

        <Button
          style="@style/EndButtonStyle"
          android:onClick="goToVerificationStep"
          android:text="@string/createwallet_got_it_button" />

        <Button
          style="@style/ButtonStyle"
          android:layout_width="match_parent"
          android:layout_marginTop="@dimen/space_md"
          android:background="@color/primary_light_x1"
          android:enabled="@{BuildConfig.CHAIN.equals(`testnet`)}"
          android:onClick="goToEncryptionStep"
          android:text="@string/createwallet_check_skip"
          android:textAlignment="center"
          android:textColor="@color/yellow"
          android:visibility="@{BuildConfig.CHAIN.equals(`testnet`) ? View.VISIBLE : View.GONE}" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="@{creationStep == Constants.CREATE_WALLET_STEP_VERIFICATION ? View.VISIBLE : View.GONE}">

        <TextView
          android:id="@+id/check_question"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/space_md"
          android:text="@string/createwallet_check_title" />

        <LinearLayout
          android:layout_width="140dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="vertical">

          <android.support.design.widget.TextInputLayout
            android:id="@+id/check_input_1_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/createwallet_check_input_hint"
            android:textColorHint="@color/primary_light_x3">

            <android.support.design.widget.TextInputEditText
              android:id="@+id/check_input_1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/space_md"
              android:backgroundTint="@color/primary_light_x3"
              android:digits="abcdefghijklmnopqrstuvwxyz "
              android:inputType="text"
              android:textColor="@color/white"
              android:textSize="14sp" />
          </android.support.design.widget.TextInputLayout>

          <android.support.design.widget.TextInputLayout
            android:id="@+id/check_input_2_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/createwallet_check_input_hint"
            android:textColorHint="@color/primary_light_x3">

            <android.support.design.widget.TextInputEditText
              android:id="@+id/check_input_2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/space_md"
              android:backgroundTint="@color/primary_light_x3"
              android:digits="abcdefghijklmnopqrstuvwxyz "
              android:inputType="text"
              android:textColor="@color/white"
              android:textSize="14sp" />
          </android.support.design.widget.TextInputLayout>

          <android.support.design.widget.TextInputLayout
            android:id="@+id/check_input_3_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/createwallet_check_input_hint"
            android:textColorHint="@color/primary_light_x3">

            <android.support.design.widget.TextInputEditText
              android:id="@+id/check_input_3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:backgroundTint="@color/primary_light_x3"
              android:digits="abcdefghijklmnopqrstuvwxyz "
              android:inputType="text"
              android:textColor="@color/white"
              android:textSize="14sp" />
          </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <Button
          style="@style/EndButtonStyle"
          android:onClick="verifyUserBackup"
          android:text="@string/createwallet_check_button" />
      </LinearLayout>

      <TextView
        style="@style/RoundedWhitePanel"
        android:text="@string/createwallet_encryption"
        android:visibility="@{creationStep == Constants.CREATE_WALLET_STEP_ENCRYPTION ? View.VISIBLE : View.GONE}" />

      <TextView
        android:id="@+id/error_view"
        style="@style/RoundedWhitePanelIcon"
        android:drawableStart="@drawable/ic_circle_cross_red"
        android:text="@string/createwallet_error_write_seed"
        android:visibility="@{creationStep == Constants.CREATE_WALLET_STEP_ERROR ? View.VISIBLE : View.GONE}" />

      <TextView
        style="@style/RoundedWhitePanel"
        android:text="@string/createwallet_check_failed"
        android:visibility="@{creationStep == Constants.CREATE_WALLET_STEP_CHECK_FAILED ? View.VISIBLE : View.GONE}" />

      <TextView
        style="@style/RoundedWhitePanelIcon"
        android:drawableStart="@drawable/ic_circle_check"
        android:text="@string/createwallet_success"
        android:visibility="@{creationStep == Constants.CREATE_WALLET_STEP_COMPLETE ? View.VISIBLE : View.GONE}" />

    </RelativeLayout>
  </ScrollView>
</layout>
