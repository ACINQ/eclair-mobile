    <ImageButton
      android:id="@+id/key_delete"
      style="@style/VirtualKey"
      android:layout_height="0dp"
      android:contentDescription="@string/key_delete_desc"
      android:paddingEnd="@dimen/space_sm"
      android:paddingBottom="8dp"
      android:scaleType="center"
      android:src="@drawable/ic_delete_white_24dp"
      android:tint="@color/primary_light_x3"
      app:layout_constrainedWidth="true"
      app:layout_constraintBottom_toBottomOf="@id/key_m"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toEndOf="@id/key_m"
      app:layout_constraintTop_toTopOf="@id/key_z"
      app:layout_constraintWidth_default="percent"
      app:layout_constraintWidth_percent=".2"
      tools:ignore="RtlSymmetry" />

  </android.support.constraint.ConstraintLayout>

  <!-- 4th row: space bar -->

  <ImageButton
    android:id="@+id/key_space"
    style="@style/VirtualKey"
    android:background="@drawable/rounded_corner_black_low_op_bottom"
    android:contentDescription="@string/key_space_desc"
    android:src="@drawable/ic_space_bar_white_24dp"
    android:tint="@color/primary_light_x3"
    app:layout_constrainedWidth="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/main_keyboard"
    app:layout_constraintWidth_default="percent"
    app:layout_constraintWidth_percent=".4" />

