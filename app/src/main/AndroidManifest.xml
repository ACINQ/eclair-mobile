<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="fr.acinq.eclair.wallet">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
  <uses-permission android:name="android.permission.CAMERA" />

  <supports-screens
    android:anyDensity="true"
    android:largeScreens="true"
    android:normalScreens="true"
    android:resizeable="true"
    android:smallScreens="true"
    android:xlargeScreens="true" />

  <application
    android:name="fr.acinq.eclair.wallet.App"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher_testnet"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <!-- activities -->
    <activity
      android:name="fr.acinq.eclair.wallet.activities.HomeActivity"
      android:label="@string/app_name"
      android:screenOrientation="portrait"
      android:theme="@style/SplashTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name="fr.acinq.eclair.wallet.activities.CreatePaymentActivity"
      android:label=""
      android:noHistory="true"
      android:parentActivityName="fr.acinq.eclair.wallet.activities.HomeActivity"
      android:screenOrientation="portrait"
      android:stateNotNeeded="true"
      android:theme="@style/CustomDialog" />
    <activity
      android:name="fr.acinq.eclair.wallet.activities.ScanActivity"
      android:noHistory="true"
      android:screenOrientation="portrait"
      android:stateNotNeeded="true"
      android:theme="@style/zxing_CaptureTheme"
      android:windowSoftInputMode="stateAlwaysHidden" />
    <activity
      android:name="fr.acinq.eclair.wallet.activities.OpenChannelActivity"
      android:label=""
      android:noHistory="true"
      android:parentActivityName="fr.acinq.eclair.wallet.activities.HomeActivity"
      android:screenOrientation="portrait"
      android:stateNotNeeded="true"
      android:theme="@style/CustomDialog" />
    <activity
      android:name="fr.acinq.eclair.wallet.activities.NetworkInfosActivity"
      android:label="@string/networkinfos_name"
      android:parentActivityName="fr.acinq.eclair.wallet.activities.HomeActivity"
      android:screenOrientation="portrait" />
    <activity
      android:name="fr.acinq.eclair.wallet.activities.LNPaymentDetailsActivity"
      android:label="@string/lnpayment_name"
      android:parentActivityName="fr.acinq.eclair.wallet.activities.HomeActivity"
      android:screenOrientation="portrait" />
    <activity
      android:name="fr.acinq.eclair.wallet.activities.BitcoinTransactionDetailsActivity"
      android:label="@string/btcpayment_name"
      android:parentActivityName="fr.acinq.eclair.wallet.activities.HomeActivity"
      android:screenOrientation="portrait" />
    <activity
      android:name="fr.acinq.eclair.wallet.activities.ChannelDetailsActivity"
      android:label="@string/channeldetails_name"
      android:parentActivityName="fr.acinq.eclair.wallet.activities.HomeActivity"
      android:screenOrientation="portrait" />
    <activity
      android:name="fr.acinq.eclair.wallet.activities.PaymentSuccessActivity"
      android:noHistory="true"
      android:screenOrientation="portrait" />
    <activity
      android:name="fr.acinq.eclair.wallet.activities.PaymentFailureActivity"
      android:noHistory="true"
      android:screenOrientation="portrait" />
    <activity
      android:name="fr.acinq.eclair.wallet.activities.AboutActivity"
      android:label="@string/about_name"
      android:parentActivityName="fr.acinq.eclair.wallet.activities.HomeActivity"
      android:screenOrientation="portrait" />
    <activity
      android:name="fr.acinq.eclair.wallet.activities.PreferencesActivity"
      android:label="@string/menu_preferences"
      android:parentActivityName="fr.acinq.eclair.wallet.activities.PreferencesActivity"
      android:theme="@style/AppTheme.ForceBar"
      android:screenOrientation="portrait" />
  </application>

</manifest>
