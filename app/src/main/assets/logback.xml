<configuration>
  <appender name="logcat" class="ch.qos.logback.classic.android.LogcatAppender">
    <tagEncoder>
      <pattern>%logger{12}</pattern>
    </tagEncoder>
    <encoder>
      <pattern>%-5level %X{channelId} - %msg%ex{24}%n</pattern>
    </encoder>
  </appender>

  <logger name="com.ning.http.client.providers.netty" level="INFO" />
  <logger name="fr.acinq.eclair.io" level="INFO" />
  <logger name="fr.acinq.eclair.router.Router" level="INFO" />
  <logger name="fr.acinq.eclair.crypto" level="WARN" />

  <root level="INFO">
    <appender-ref ref="logcat" />
  </root>
</configuration>
