<configuration>
  <appender name="logcat" class="ch.qos.logback.classic.android.LogcatAppender">
    <tagEncoder>
      <pattern>%logger{12}</pattern>
    </tagEncoder>
    <encoder>
      <pattern>%d %-5level %logger{36} %X{akkaSource} %X{channelId} - %msg%ex{24}%n</pattern>
    </encoder>
  </appender>

  <logger name="com.ning.http.client.providers.netty" level="WARN" />
  <logger name="fr.acinq.eclair.crypto" level="INFO" />
  <logger name="fr.acinq.eclair.blockchain.electrum" level="DEBUG" />
  <logger name="fr.acinq.eclair.router.Router" level="DEBUG" />

  <root level="DEBUG">
    <appender-ref ref="logcat" />
  </root>
</configuration>
